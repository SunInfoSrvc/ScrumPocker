<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view>
   <form bindsubmit="formSubmit">
      <input name="sessionId" style="border:solid 1px silver;" placeholder="请输入房间号" type="number" />
      <button form-type="submit" type="primary">进入房间</button>
      <button type="primary">房间设置</button>
      <button type="primary">使用说明</button>
   </form>    
  </view>
</view>